<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.mag.musicplayer">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <!-- Services-->

        <service
            android:name=".services.old.MusicPlayerService"
            android:enabled="true"
            android:exported="true" />


        <service
            android:name=".services.MusicPlayerService"
            android:enabled="true"
            android:exported="true" />

        <service
            android:name=".services.old.MyService"
            android:enabled="true"
            android:exported="true" />

        <!-- Activities-->

        <activity android:name=".view.activity.TrackPlayerActivity" />
        <activity android:name=".view.activity.MusicPlayerActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.SettingActivity" />

    </application>

</manifest>